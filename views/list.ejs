<!DOCTYPE html>
<html lang="en">
<head>
 <% include partials/head %> 
</head>
<body>
<% include partials/menu1 %>
<div class="container-fluid bg-3 text-center">    
  <h3><%= page %></h3><br>
  <div class="row">
    <table class='table table-striped table-responsive-md btm-table'>
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Course Name</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <% course.forEach(function(course){ %>
                <tr>
                    <td><%=course._id %></td>
                    <td><%=course.studentname %></td>
                    <td><%=course.coursename %></td>
                    <td>
                        <form action='updateform/<%=course._id %>' method="POST">
                            <button type="submit">Update</button>
                        </form>
                    </td>
                    <td>
                    <form action='<%=course._id %>/delete' method="POST">
                        <button type="submit">Delete</button>
                    </form>
                </td>                   
                </tr>
             <% });  %>   
        </tbody>
    </table>
  </div>
</div>
</body>
<% include partials/script %>
</html>
